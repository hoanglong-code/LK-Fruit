@model List<fruitkha_main.Models.product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/User/Views/Shared/Layout.cshtml";
}

<div class="search-area">
    <div class="container">

        <div class="row">
            <div class="col-lg-12">
                <span class="close-btn"><i class="fas fa-window-close"></i></span>
            </div>
        </div>
    </div>
</div>
<!-- end search arewa -->
<!-- breadcrumb-section -->
<div class="breadcrumb-section breadcrumb-bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 offset-lg-2 text-center">
                <div class="breadcrumb-text">
                    <p>Fresh and Organic</p>
                    <h1>Shop</h1>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end breadcrumb section -->
<!-- products -->
<div class="product-section mt-150 mb-150">
    <div class="container">

        <div class="row">
            <div class="col-md-12">
                <div class="product-filters">
                    <ul>
                        <li class="active" data-filter="*">All</li>
                        <li data-filter=".strawberry">Strawberry</li>
                        <li data-filter=".berry">Berry</li>
                        <li data-filter=".lemon">Lemon</li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="row product-lists">
            @foreach (var item in Model)
            {

                <div class="col-lg-4 col-md-6 text-center strawberry">
                    <div class="single-product-item">

                        <div class="product-image">
                            <a href="/User/Single_Product/Index/@item.id">
                                <img src="~/Areas/Asset/FileUpload/@Html.DisplayFor(modelItem => item.avatar)" alt="">
                            </a>
                        </div>
                        <h3>@item.name</h3>
                        <p class="product-price"><span>Per Kg</span>@item.price</p>
                        @using (Html.BeginForm("AddToCart", "Cart", new { id = item.id }))
                        {
                            <div class="product__details__quantity">
                                <div class="quantity">
                                    <div class="pro-qty">
                                        <input type="hidden" value="1" name="qty">
                                    </div>
                                </div>
                            </div>
                            <input type="submit" value="Add to cart" />
                        }
                    </div>
                </div>
            }
        </div>


    </div>
</div>
<!-- end products -->
<!-- logo carousel -->
<div class="logo-carousel-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="logo-carousel-inner">
                    <div class="single-logo-item">
                        <img src="~/Areas/User/assets/img/company-logos/1.png" alt="">
                    </div>
                    <div class="single-logo-item">
                        <img src="~/Areas/User/assets/img/company-logos/2.png" alt="">
                    </div>
                    <div class="single-logo-item">
                        <img src="~/Areas/User/assets/img/company-logos/3.png" alt="">
                    </div>
                    <div class="single-logo-item">
                        <img src="~/Areas/User/assets/img/company-logos/4.png" alt="">
                    </div>
                    <div class="single-logo-item">
                        <img src="~/Areas/User/assets/img/company-logos/5.png" alt="">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



